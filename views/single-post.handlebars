<div class="post">
  <article class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.User.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div class="media my-3">
            <div class="media-body">
              <p>{{body}}</p>
              <p class="text-muted">
                &mdash; {{User.username}}, {{format_date createdAt}}
              </p>
            </div>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <div class="form-group">
        <label class="form-label" for="comment-body">Comment</label>
        <textarea name="comment-body" class="form-control"></textarea>
      </div>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>